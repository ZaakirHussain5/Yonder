@model IEnumerable<Yonder.Models.Category>
@{
    ViewBag.Title = "Dine";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<section id="home" class="slider" data-stellar-background-ratio="0.5">
    <div class="row">
        <div class="item item-first" style="height: 250px;background-image:url('../../Content/Customer/images/menu-image1.jpg')">
            <div class="caption">
                <div class="container">
                    <div class="col-md-8 col-sm-12">
                        <h1>DINE</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="team" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row">

            <div class="col-md-12 col-sm-12">
                <div class="section-title wow fadeInUp" data-wow-delay="0.1s">
                    <h2>Options to Choose From</h2>
                    <h4></h4>
                </div>
            </div>

            <div class="row">
                @foreach (var category in Model)
                {
                    <div class="col-md-4 col-sm-4">
                        <div class="team-thumb wow fadeInUp" data-wow-delay="0.2s">
                            <img src="@category.Image" class="img-responsive grid-img" alt="">
                            <div class="team-hover">
                                <div class="team-item">
                                    <h4>@category.category</h4>
                                    <ul class="social-icon">
                                        <li><a href="/Home/FoodMenu/?category=@category.category" class="fa fa-arrow-right"></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="team-info">
                            <h3>@category.category</h3>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
