@model Yonder.Models.Menu

@{
    ViewBag.Title = "FoodMenu";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<section id="home" class="slider" data-stellar-background-ratio="0.5">
    <div class="row">
        <div class="item item-first" style="height: 250px;background-image:url('../../Content/Customer/images/menu-image1.jpg')">
            <div class="caption">
                <div class="container">
                    <div class="col-md-8 col-sm-12">
                        <h1>DINE</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="contact" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="col-md-12 col-sm-12">
            <div class="section-title text-capitalize wow fadeInUp" data-wow-delay="0.1s">
                <h2>
                    @Model.menuList[0].Category
                    Menu
                </h2>
                <h4></h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="gaadiex-list" style="width:100%">
                    <div class="row">
                        @foreach (var menuItem in Model.menuList)
                        {
                            <div class="col-md-4">
                                <img class="gaadiex-list-item-img" src="@menuItem.Image" alt="Menu Item">
                                <div class="gaadiex-list-item-text">
                                    <h3><a href="#">@menuItem.itemName</a></h3>
                                    <h4>@menuItem.name</h4>
                                    <h5>Shop Number : @menuItem.ShopNumber</h5>
                                    <p>From @menuItem.available_start_time to @menuItem.available_end_time</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

