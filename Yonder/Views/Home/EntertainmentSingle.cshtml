<div class="modal fade" id="bookModal">
    <div class="modal-dialog">
        <form action="#" method="post">


            <div class="modal-content">
                <div class="modal-header">
                    <center>
                        <button type="button" class="close" data-dismiss="modal">
                            <i class="fa fa-remove"></i>
                        </button>
                        <h2 class="modal-title">
                            Request From
                        </h2>
                    </center>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-md-4">
                            <input type="text" id="name" value="" placeholder="Name" class="form-control" autofocus required />
                        </div>
                        <div class="form-group col-md-4">
                            <input type="email" id="email" value="" placeholder="Email" class="form-control" />
                        </div>
                        <div class="form-group col-md-4">
                            <input type="text" id="mNumber" value="" placeholder="Mobile Number" class="form-control" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                            <input type="text" id="subject" value="" placeholder="Subject" class="form-control" required />
                        </div>
                        <div class="form-group col-md-12">
                            <textarea type="text" id="message" value="" placeholder="Your Message" class="form-control" style="height:200px" required></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger btn-lg btn-block">
                        <i class="fa fa-envelope"></i> Send
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>



