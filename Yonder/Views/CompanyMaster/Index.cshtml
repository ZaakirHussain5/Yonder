@model IEnumerable<Yonder.Models.CompanyMaster>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminHome/_adminHomePage.cshtml";
}

<div class="loading" style="display:none">Loading</div>

<h2 class="margin-top-20"
    style="background-color:#F7D031;padding:15px 15px 15px 15px;">
    Registered Companies
</h2>

<div class="panel panel-default">
    <div class="panel-body">
        <a href="@Url.Action("New", "CompanyRegistration")"
           class="btn btn-default btn-lg" style="background-color:#ffda0f;width:auto;margin-bottom:10px">
            <i class="glyphicon glyphicon-plus-sign"></i>
            New Company Registration
        </a>
        <table class="table table-bordered table-hover" id="Companies">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.company)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.headOffice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Website)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.State)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PinCode)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>


                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(item.company, "Details", "CompanyRegistration", new { id = item.id }, new { @class = "text" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.headOffice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Website)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PinCode)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "CompanyRegistration", new {id=item.id})" data-toggle="tooltip" title="Edit" class="btn btn-white btn-sm">
                                <i class="glyphicon glyphicon-pencil" style="color:blue"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts
{
    
    <script>
        $(document).ready(function () {
            var cardtype = $("#Companies").DataTable({
                responsive: true,
                lengthMenu:[[5,10,15,-1],[5,10,15,"All"]]
            })
            $('#Companies_filter input').addClass('form-control');
            $('.dataTables_length select').addClass('form-control');
        })
    </script>    

}